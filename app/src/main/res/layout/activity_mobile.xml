
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileActivity">


    <include
        android:id="@+id/include"
        layout="@layout/content_mobile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.digitalevidence.Views.DeviceView
                android:id="@+id/DeviceView0"
                class="com.example.digitalevidence.Views.DeviceView"
                android:layout_marginRight="200dp"
                android:layout_width="140dp"
                android:layout_height="120dp"/>

            <com.example.digitalevidence.Views.DeviceView
                android:id="@+id/DeviceView1"
                class="com.example.digitalevidence.Views.DeviceView"
                android:layout_marginLeft="140dp"
                android:layout_width="140dp"
                android:layout_height="120dp"/>

            <com.example.digitalevidence.Views.DeviceView
                android:id="@+id/DeviceView2"
                class="com.example.digitalevidence.Views.DeviceView"
                android:layout_marginLeft="280dp"
                android:layout_width="140dp"
                android:layout_height="120dp"/>

            <com.example.digitalevidence.Views.DeviceView
                android:id="@+id/DeviceView3"
                class="com.example.digitalevidence.Views.DeviceView"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="140dp"
                android:layout_width="140dp"
                android:layout_height="120dp"/>

            <com.example.digitalevidence.Views.DeviceView
                android:id="@+id/DeviceView4"
                class="com.example.digitalevidence.Views.DeviceView"
                android:layout_marginTop="120dp"
                android:layout_width="140dp"
                android:layout_height="120dp"/>

            <com.example.digitalevidence.Views.DeviceView
                android:id="@+id/DeviceView5"
                class="com.example.digitalevidence.Views.DeviceView"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="280dp"
                android:layout_width="140dp"
                android:layout_height="120dp"/>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>



