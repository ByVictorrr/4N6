<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@color/colorIcon</item>
        <item name="colorControlActivated">@color/colorIconSel</item>
        <item name="colorControlHighlight">@color/colorIconSel</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="itemBackground">@color/colorBackground</item>
        <item name="itemIconTint">@color/colorIcon</item>
        <item name="itemTextColor">@color/colorIcon</item>
    </style>

</resources>