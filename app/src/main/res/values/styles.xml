<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@color/colorIcon</item>
        <item name="colorControlActivated">@color/colorIconSel</item>
        <item name="colorControlHighlight">@color/colorIconSel</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="itemBackground">@color/colorBackground</item>
        <item name="itemIconTint">@color/colorIcon</item>
        <item name="itemTextColor">@color/colorIcon</item>
    </style>

    <style name="TextBox" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="itemTextColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextBoxBold" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="itemTextColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>